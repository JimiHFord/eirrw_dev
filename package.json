{
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@types/datatables.net": "^1.10.24",
    "@types/datatables.net-fixedheader": "^3.1.5",
    "@types/datatables.net-rowgroup": "^1.1.2",
    "@types/jquery": "^3.5.16",
    "better-sqlite3": "^7.6.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "wrangler": "^2.6.2"
  },
  "scripts": {
    "prebuild": "npm run install-theme && npm run theme",
    "prebuild-dev": "npm run install-theme && npm run theme",
    "build": "hugo",
    "build-dev": "hugo -D",
    "bootstrap-dev": "wrangler d1 execute D1_EIRRW --local --file bootstrap.sql",
    "dev-server": "wrangler pages dev --d1 D1_EIRRW --persist --local -- hugo server -D",
    "install-theme": "cd ./themes/congo && npm ci",
    "theme": "NODE_ENV=production ./themes/congo/node_modules/tailwindcss/lib/cli.js -c tailwind.config.js -i ./themes/congo/assets/css/main.css -o ./assets/css/compiled/main.css --jit",
    "dev-theme": "NODE_ENV=development ./themes/congo/node_modules/tailwindcss/lib/cli.js -c tailwind.config.js -i ./themes/congo/assets/css/main.css -o ./assets/css/compiled/main.css --jit -w",
    "start": "concurrently npm:dev-*"
  }
}
